pipeline {

	agent any

	parameters {
	string(name: 'version')
	string(name: 'appName')
	}
	
	stages {
		stage("BUILD") {
			steps {
				echo "build stage"
				sh 'docker build . -f build.dockerfile -t nrbuild'
				sh 'docker volume create nrVolOut'
				sh 'docker run --mount type=volume,src="nrVolOut",dst=/nodered nrbuild:latest bash -c "ls -l && cd .. && cp -r /node-red_fork /nodered"'
			}
		}
		
		stage("TEST") {
			steps {
				echo "test stage"
				sh 'docker build . -f test.dockerfile -t nrtest'
			}
		}
		stage("DEPLOY") {
			steps {
				echo "deploy stage"
				sh 'docker rm -f nrdeploy || true'
				sh 'docker run --name nrdeploy --mount type=volume,src="nrVolOut",dst=/nodered node bash -c "cd nodered && cd node-red_fork && npm run"'
				sh 'sleep 10; exit $(docker inspect nrdeploy --format="{{.State.ExitCode}}")'
			}
		}
	}
	
	post {
		success {
			echo "PIPELINE SUCCEED"
			}
		failure {
			echo "PIPELINE FAILURE"
			}
		}
}
	
