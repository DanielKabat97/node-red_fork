pipeline {

	agent any

	stages {
		stage("BUILD") {
			steps {
				echo "build stage"
				sh 'docker build . -f build.dockerfile -t nrbuild'
				sh 'docker volume create nrVolOut'
				sh 'docker run --mount type=volume,src="nrVolOut",dst=/nodered nrbuild:latest bash -c "ls -l && cd .. && cp -r /node-red /nodered"'
			}
		}
		
		stage("TEST") {
			steps {
				echo "test stage"
				sh 'docker build . -f test.dockerfile -t nrtest'
			}
		}
	}
}
	
